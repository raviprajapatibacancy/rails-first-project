<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Home</a></li>
    <li class="breadcrumb-item"><a href="#">Appointments</a></li>
    <li class="breadcrumb-item active" aria-current="page">list</li>
  </ol>
</nav>

<table class="table table-bordered table-striped" id="myTable">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Appointment Date</th>
      <th scope="col">Physician</th>
      <th scope="col">Patient</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  
  <% @appointments.each do |c| %>
    <tr>
      <th scope="row"><%= c.id%></th>
      <td><%= c.appointment_date %></td>
      <td><%= c.phsician.name %></td>
      <td><%= c.patient.name  %></td>
      <td>
          <%= link_to 'Edit', {:action => 'edit', :id => c.id}, class: "btn btn-primary btn-sm" %>&nbsp;&nbsp;&nbsp;
          <%= button_to 'Delete', appointment_path(c), method: :delete, class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "New Appointment", new_appointment_path, class: 'btn btn-primary' %>

<script>
$(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>