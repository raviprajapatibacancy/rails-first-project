<h3>Edit Blog Detail</h3><br>
<div class="container-fluid">
<%= form_for @blog, :url =>{:action => "update", :id =>@blog} do |f| %>

<div class="form-outline mb-4">
    <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
</div>

 <div class="form-outline mb-4">
    <%= f.text_area :description, placeholder: "Description", class: "form-control" %>
</div>

 <div class="form-outline mb-4">
    <%= collection_select(:blog, :category_id, Category.all, :id, :name, {:prompt=>true}, {:class=>'form-control'}) %>
</div>

<div class="form-outline mb-4">
    <%= radio_button("blog", "status", "0") %> Pending
    <%= radio_button("blog", "status", "1") %> Published
</div>

<%= f.select :tag_ids, Tag.all.collect {|t| [t.name, t.id]}, { :prompt => "Please select tags"}, { :multiple => true, :size => 5, class: "form-control" } %>

<%= f.submit "Save changes", class: "btn btn-primary btn-block mb-4" %>
<% end %>

<%= link_to 'Back', {:action => 'index' } %>
</div>