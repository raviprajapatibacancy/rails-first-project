<!DOCTYPE html>
<html>
  <head>
    <title>Railstest</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <link href="http://cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="http://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js" async="async" data-turbo-track="reload"></script>
  </head>

  <body>
  <div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <span class="fs-5 d-none d-sm-inline">Menu</span>
                </a>
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                    <%= link_to dashboard_path, :class => "nav-link px-0 align-middle #{current_class?("/dashboard") }" do %>
                         <i class="fa fa-user"></i> <span class="ms-1 d-none d-sm-inline">Dashboard</span>
                    <% end %>
                    </li>
                    
                    <li>
                    <%= link_to categories_path, :class => "nav-link px-0 align-middle #{current_class?("/categories") }" do %>
                         <i class="fa fa-list"></i> <span class="ms-1 d-none d-sm-inline">Categories</span>
                    <% end %>
                    </li>

                    <li>
                    <%= link_to tags_path, :class => "nav-link px-0 align-middle #{current_class?("/tags") }" do %>
                         <i class="fa fa-tag"></i> <span class="ms-1 d-none d-sm-inline">Tags</span>
                    <% end %>
                    </li>

                     <li>
                    <%= link_to patients_path, :class => "nav-link px-0 align-middle #{current_class?("/patients") }" do %>
                         <i class="fa fa-tag"></i> <span class="ms-1 d-none d-sm-inline">Patients</span>
                    <% end %>
                    </li>

                     <li>
                    <%= link_to phsicians_path, :class => "nav-link px-0 align-middle #{current_class?("/phsicians") }" do %>
                         <i class="fa fa-medkit"></i> <span class="ms-1 d-none d-sm-inline">Physicians</span>
                    <% end %>
                    </li>

                     <li>
                    <%= link_to appointments_path, :class => "nav-link px-0 align-middle #{current_class?("/appointments") }" do %>
                         <i class="fa fa-calendar"></i> <span class="ms-1 d-none d-sm-inline">Add Appointment</span>
                    <% end %>
                    </li>

                    <li>
                    <%= link_to blogs_path, :class => "nav-link px-0 align-middle #{current_class?("/blogs") }" do %>
                         <i class="fa fa-newspaper-o"></i> <span class="ms-1 d-none d-sm-inline">Blogs</span>
                    <% end %>
                    </li>

                    <li>
                    <%= link_to 'logout', :class => 'nav-link px-0 align-middle' do %>
                         <i class="fa fa-sign-out"></i> <span class="ms-1 d-none d-sm-inline">Logout</span>
                    <% end %>
                        
                    </li>

                </ul>
                <hr>
                <div class="dropdown pb-4">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                        <span class="d-none d-sm-inline mx-1">loser</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                        <li><a class="dropdown-item" href="#">New project...</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col py-3">
            <%= yield %>
        </div>
    </div>
    </div>
  </body>
</html>